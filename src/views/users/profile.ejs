<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <%- include('../partials/header') %>

        <div class="profile-container">
            <div class="profile-card">
                <h2 class="profile-title">Mi Perfil</h2>

                <div class="profile-avatar-wrapper">
                    <img src="<%= user.image %>" alt="Perfil" class="profile-avatar"
                        onerror="this.src='/images/users/default-user.jpg'">
                </div>

                <h3 class="profile-name">
                    <%= user.firstName %>
                        <%= user.lastName %>
                </h3>

                <div class="profile-info">
                    <p><strong>Email:</strong>
                        <%= user.email %>
                    </p>
                    <p><strong>Categoría:</strong>
                        <%= user.category %>
                    </p>
                </div>

                <div class="profile-actions">
                    <% if (user.category==='admin' ) { %>
                        <a href="/products/create" class="btn btn-primary">
                            <i class="fas fa-plus-circle"></i> Cargar Producto
                        </a>
                        <% } %>
                            <a href="/products" class="btn btn-secondary">
                                <i class="fas fa-shopping-bag"></i> Ver Productos
                            </a>
                            <a href="/users/logout" class="btn btn-danger">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                            </a>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>

</body>

</html>